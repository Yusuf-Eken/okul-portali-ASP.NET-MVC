@model YusufEken.EntityLayer.Bolum

@{
    ViewBag.Title = "Bölüm Silme Onayı";
}
<h3>Bu bölümü silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Bölüm Bilgileri</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Bölüm Adı
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BolumAd)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-danger" /> |
            @Html.ActionLink("Listeye Dön", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>