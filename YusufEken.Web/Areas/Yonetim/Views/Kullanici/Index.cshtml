@model IEnumerable<YusufEken.EntityLayer.Kullanici>

@{
    ViewBag.Title = "Kullanıcı Listesi";
}

<h2>Kullanıcı Listesi</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-bordered table-striped">
    <tr>
        <th>
            Ad Soyad
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Eposta)
        </th>
        <th><a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="fas fa-plus-circle me-1"></i> Yeni Dönem Ekle
            </a>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ad) @Html.DisplayFor(modelItem => item.Soyad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Eposta)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id=item.Id })" class="btn btn-xs btn-success me-1" title="Güncelle">
                    <i class="fas fa-edit"></i> Güncelle
                </a>                <a href="@Url.Action("Delete", new { id=item.Id })" class="btn btn-xs btn-danger" title="Sil">
                    <i class="fas fa-trash-alt"></i> Sil
                </a>            </td>
        </tr>
    }

</table>