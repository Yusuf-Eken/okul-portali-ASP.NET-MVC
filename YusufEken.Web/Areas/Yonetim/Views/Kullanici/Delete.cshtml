@model YusufEken.EntityLayer.Kullanici

@{
    ViewBag.Title = "Kullanıcı Silme Onayı";
}

<h3>Bu kullanıcıyı silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Kullanıcı Bilgileri</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Ad Soyad
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ad) @Html.DisplayFor(model => model.Soyad)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Eposta)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Eposta)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-danger" /> |
            @Html.ActionLink("Listeye Dön", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>